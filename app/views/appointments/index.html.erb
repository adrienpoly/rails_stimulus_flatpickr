<div class="container my-5">
  <h2 class="text-center text-primary mb-5"><%= t ".title" %></h3>
  <div class="row">
    <div class="col-md-6">
      <h3><%= t ".add" %></h3>
      <div class="my-3">
        <%= render "datepicker", appointment: @appointment %>
      </div>
      <p class="text-secondary"><%= t(".next_appointment", next_at: l(@next_appointment, format: :long)) %></p>
    </div>
    <div class="col-md-6">
      <h3><%= t ".appointments" %></h3>
      <%= render @appointments %>
    </div>
  </div>
</div>
